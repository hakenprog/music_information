<p id="notice"><%= notice %></p>

<h1>Géneros</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.nombre %></td>
        <td><%= link_to 'Ver', genre %></td>
        <td><%= link_to 'Editar', edit_genre_path(genre) %></td>
        <td><%= link_to 'Eliminar', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Género', new_genre_path, :class => "btn btn-primary"  %>
<%= link_to 'Atrás', url_for(:back), :class => "btn btn-primary" %>

