<p id="notice"><%= notice %></p>

<h1>Cities</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Province</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.province.nombre %></td>
        <td><%= city.nombre %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_city_path, :class => "btn btn-primary"  %>
