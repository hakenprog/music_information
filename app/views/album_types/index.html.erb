<p id="notice"><%= notice %></p>

<h1>Tipos de álbumes</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @album_types.each do |album_type| %>
      <tr>
        <td><%= album_type.nombre %></td>
        <td><%= link_to 'Show', album_type %></td>
        <td><%= link_to 'Edit', edit_album_type_path(album_type) %></td>
        <td><%= link_to 'Destroy', album_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo tipo de álbum', new_album_type_path, :class => "btn btn-primary"  %>
