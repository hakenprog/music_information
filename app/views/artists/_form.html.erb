<%= form_with(model: artist, local: true) do |form| %>
<% if artist.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

  <ul>
    <% artist.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group row">
  <%= form.label :nombre, :class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= form.text_field :nombre %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :descripcion, :class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">

    <%= form.text_field :descripcion %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :informacion, :class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">

    <%= form.text_field :informacion %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :Estado, :class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">

    <%= form.collection_select(:state_id, State.all, :id, :nombre) %>
  </div>
</div>

<div class="form-group row">

  <%= form.label "Fecha de inicio de actvividad", :class => "col-sm-2 col-form-label"%>
  <div class="col-sm-10">

    <%= form.date_field :fecha_ini %>
  </div>
</div>

<div class="form-group row">
  <%= form.label "Fecha de Fin (Dejar en blanco si esta en activo)", :class => "col-sm-2 col-form-label"%>
  <div class="col-sm-10">

    <%= form.date_field :fecha_fin %>
  </div>
</div>

<%= form.hidden_field :location_id, :value => "2"%>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
