<table id ="genres" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Título</th>
      <th>Álbum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <%= render partial: "song", collection: @album.songs%>

  </tbody>
</table>


<br>
<h3> Añadir cancion al álbum</h3>

<div class="form-group row">
  <%= form.label :nombre , :class => "col-sm-2 col-form-label"%>
  <%= form.text_field :nombre, :class => "form-control col-sm-10" %>

</div>

<div class="form-group row">
  <%= form.label :duración , :class => "col-sm-2 col-form-label"%>
  <%= form.time_field :duración , :class => "form-control col-sm-10", :value => "00:00:00"%>


</div>

<%= form.hidden_field :album_id, :value => params[:album_id]%>


<div class="actions">
  <%= form.submit %>
</div>

<% end %>
